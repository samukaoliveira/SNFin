<%= form_with(model: cartao, local: true) do |f| %>
  <% if cartao.errors.any? %>
    <div class="mb-4 text-red-600">
      <h3>Erros:</h3>
      <ul>
        <% cartao.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :nome, class: "block font-semibold" %>
    <%= f.text_field :nome, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :limite, class: "block font-semibold" %>
    <%= f.number_field :limite, step: 0.01, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="flex gap-2">
    <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded" %>
    <%= link_to "Cancelar", cartaos_path, class: "px-4 py-2 border rounded" %>
  </div>
<% end %>
