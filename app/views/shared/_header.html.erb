<!-- ===== HEADER ===== -->
<div class="header">

  <!-- BOTÃO MENU -->
  <button class="menu-btn" onclick="toggleMenu()" aria-label="Menu">
    <i class="fa-solid fa-bars"></i>
  </button>

  <!-- MENU LATERAL -->
  <nav id="navLinks" class="nav-links">
    <%= link_to lancamentos_path do %>
      <i class="fa-solid fa-house"></i> Início
    <% end %>

    <%= link_to lancamentos_path do %>
      <i class="fa-solid fa-money-check"></i> Lançamentos
    <% end %>

    <%= link_to cartaos_path do %>
      <i class="fa-solid fa-credit-card"></i> Cartões
    <% end %>
  </nav>

  <!-- COMPETÊNCIA -->
  <div class="competencia">

    <%= link_to url_for(
          mes: @competencia_atual.anterior.mes,
          ano: @competencia_atual.anterior.ano
        ) do %>
      <% if @titulo_tem_setas != false %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
    <% end %>

    <h1 id="titulo">
      <%= content_for?(:title) ? yield(:title) : @competencia_atual.titulo %>
    </h1>

    <%= link_to url_for(
          mes: @competencia_atual.proxima.mes,
          ano: @competencia_atual.proxima.ano
        ) do %>
      <% if @titulo_tem_setas != false %>
        <i class="fa-solid fa-chevron-right"></i>
      <% end %>
    <% end %>

  </div>

  <!-- AÇÕES -->
  <div class="login">
    <%= link_to destroy_user_session_path,
          data: { turbo_method: :delete },
          class: "logout-btn" do %>
      ⎋ Sair
    <% end %>
  </div>

</div>
