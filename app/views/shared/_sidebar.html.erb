<aside class="w-64 bg-white border-r">
  <div class="p-4 text-xl font-bold">
    SNFin
  </div>

  <nav class="px-4 space-y-2">
    <%= link_to "Lançamentos", lancamentos_path, class: "block py-2 px-3 rounded hover:bg-gray-100" %>
    <%= link_to "Cartões", cartaos_path, class: "block py-2 px-3 rounded hover:bg-gray-100" %>
    <%= link_to "Competências", competencias_path, class: "block py-2 px-3 rounded hover:bg-gray-100" %>
  </nav>

  <!-- ESPAÇO + LINHA -->
  <div class="mt-8 mb-6 border-t border-gray-200"></div>

  <!-- RESUMO DA COMPETÊNCIA -->
  <div class="sticky top-6 bg-white px-4 pb-6 space-y-4">
    <div class="mt-2 ">
      <p class="text-xs text-gray-500 uppercase">Receitas Previstas</p>
      <p class="text-sm font-semibold text-silver-600">
        <%= number_to_currency(@competencia_atual.total_receitas) %>
      </p>
    </div>
    <div class="mt-2 ">
      <p class="text-xs text-gray-500 uppercase">Receitas Realizadas</p>
      <p class="text-lg font-semibold text-green-600">
        <%= number_to_currency(@competencia_atual.total_receitas) %>
      </p>
    </div>

    <div class="mt-2 ">
      <p class="text-xs text-gray-500 uppercase">Despesas Previstas</p>
      <p class="text-sm font-semibold text-silver-600">
        <%= number_to_currency(@competencia_atual.total_despesas) %>
      </p>
    </div>
    <div class="mt-2 ">
      <p class="text-xs text-gray-500 uppercase">Despesas Realizadas</p>
      <p class="text-lg font-semibold text-red-600">
        <%= number_to_currency(@competencia_atual.total_despesas) %>
      </p>
    </div>

    <div class="pt-2 border-t border-gray-100">
      <p class="text-xs text-gray-500 uppercase">Saldo do mês</p>
      <p class="text-xl font-bold
                <%= @competencia_atual.saldo >= 0 ? 'text-green-400' : 'text-red-400' %>">
        <%= number_to_currency(@competencia_atual.saldo) %>
      </p>
    </div>

    <div class="pt-2 border-t border-gray-100">
      <p class="text-xs text-gray-500 uppercase">Saldo total</p>
      <p class="text-xl font-bold
                <%= @competencia_atual.saldo_total >= 0 ? 'text-green-700' : 'text-red-700' %>">
        <%= number_to_currency(@competencia_atual.saldo_total) %>
      </p>
    </div>
  </div>
</aside>
