<%= form_with model: @lancamento, local: true do |f| %>

  <% if @lancamento.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <ul class="text-red-600 text-sm">
        <% @lancamento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @lancamento.fatura_id.present? %>
    <%= f.hidden_field :fatura_id %>
  <% end %>

  <div class="mb-4">
    <%= f.label :descricao %>
    <%= f.text_field :descricao, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :data %>
    <%= f.date_field :data, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :natureza %>
    <%= f.select :natureza,
          Lancamento.naturezas.keys.map { |k| [k.humanize, k] },
          { prompt: "Selecione" },
          class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :valor %>
    <%= f.number_field :valor, step: 0.01,
          class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-6">
    <%= f.label :frequencia %>
    <%= f.select :frequencia,
          Lancamento.frequencia.keys.map { |k| [k.humanize, k] },
          {},
          class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
  </div>

  <div class="flex gap-3">
    <%= f.submit "Salvar",
          class: "px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>

    <%= link_to "Cancelar", lancamentos_path,
          class: "text-gray-600 hover:underline" %>
  </div>

<% end %>
